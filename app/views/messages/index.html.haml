%h1 Messages

- if displays = @messages.try(:first).try(:display)
  - displays.each do |type, settings|
    = send(type, chart_data(@messages_chart, settings))

.table-responsive
  %table.table.table-hover.table-striped
    %thead
      %th CreatedAt
      -#%th Data
      - if @messages.first && @messages.first.attributes
        - @messages.first.attributes.keys.each do |attribute|
          %th= attribute
    %tbody
      - @messages.each do |message|
        = render partial: message
- if @messages.empty?
  .alert.alert-info
    = t('.no_records')

= paginate @messages_array
