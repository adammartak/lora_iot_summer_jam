.row.wrapper.border-bottom.white-bg.page-heading
  .col-lg-10
    %h2 Projects
    %ol.breadcrumb
      %li.active= link_to "Projects", projects_path

.wrapper.wrapper-content.animated.fadeInRight
  .row
    .col-lg-12
      .ibox.float-e-margins
        .ibox-title
          %h5 Devices

        .ibox-content

          .table-responsive
            %table.table.table-hover.table-striped
              %thead
                %th Project ID
                %th Name
                %th
              %tbody
                - @projects.each do |project|
                  = render partial: project
            - if @projects.empty?
              .alert.alert-info
                = t('.no_records')
